# InvestigatorAI Environment Configuration

# ===== API Keys =====
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_SEARCH_API_KEY=your_tavily_api_key_here
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# ===== LLM Configuration =====
EMBEDDING_MODEL=text-embedding-3-large
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000

# ===== Redis Cache Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_ENABLED=true

# ===== Qdrant Vector Database =====
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
VECTOR_COLLECTION_NAME=regulatory_documents

# ===== Document Processing =====
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
PDF_DATA_PATH=data/pdf_downloads

# ===== Performance Settings =====
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# ===== Retrieval Optimization Settings =====
# DEFAULT_RETRIEVAL_METHOD: auto (BM25 primary with dense fallback), bm25 (BM25 only), dense (vector only)
DEFAULT_RETRIEVAL_METHOD=auto
# Enable/disable performance logging for search operations
ENABLE_PERFORMANCE_LOGGING=true
# Enable/disable BM25 sparse retrieval (disabling falls back to dense only)
BM25_ENABLED=true

# ===== Development Settings =====
DEBUG=false
LOG_LEVEL=INFO